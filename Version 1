<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Daily Scientific Notation Problem</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2em; max-width: 600px; margin: auto; }
    .problem { font-size: 1.5em; margin-bottom: 1em; }
    input, button { padding: 0.5em; font-size: 1em; margin-top: 1em; width: 100%; }
    .feedback { font-weight: bold; margin-top: 1em; }
  </style>
</head>
<body>
  <h1>Daily Scientific Notation Problem</h1>
  <div class="problem" id="problem"></div>
  <input type="text" id="answer" placeholder="Enter your answer...">
  <button onclick="checkAnswer()">Check Answer</button>
  <div class="feedback" id="feedback"></div>

  <script>
    function generateProblem(seed) {
      const random = () => {
        const x = Math.sin(seed++) * 10000;
        return x - Math.floor(x);
      };

      const isDivision = random() > 0.5;
      const base1 = +(random() * 9 + 1).toFixed(2);
      const exp1 = Math.floor(random() * 9 - 5);
      const base2 = +(random() * 9 + 1).toFixed(2);
      const exp2 = Math.floor(random() * 9 - 5);

      const left = `${base1}×10^${exp1}`;
      const right = `${base2}×10^${exp2}`;

      const problemText = isDivision ? `(${left}) ÷ (${right})` : `(${left}) × (${right})`;
      const correctAnswer = isDivision
        ? (base1 / base2 * Math.pow(10, exp1 - exp2))
        : (base1 * base2 * Math.pow(10, exp1 + exp2));

      return { text: problemText, answer: correctAnswer };
    }

    const today = new Date();
    const seed = today.getFullYear() * 10000 + (today.getMonth() + 1) * 100 + today.getDate();
    const { text, answer } = generateProblem(seed);
    document.getElementById('problem').textContent = text;

    function checkAnswer() {
      const userAnswer = parseFloat(document.getElementById('answer').value);
      const tolerance = 0.00001;
      const feedback = Math.abs(userAnswer - answer) < tolerance ? "✅ Correct!" : "❌ Try again.";
      document.getElementById('feedback').textContent = feedback;
    }
  </script>
</body>
</html>
